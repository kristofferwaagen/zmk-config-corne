/*
 * ZMK keymap for Norwegian (Bokmål)
 * Keeps your original structure; adjusts symbols to match NO layout.
 * SPDX-License-Identifier: MIT
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

 / {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | SHFT |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | CTRL |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  Å  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
        // Simplified: only three layers (base, lower=nums+arrows, raise=symbols+media/edit).
        // Enter remains mod-tap AltGr for Norwegian symbols when held; Space is plain.
        // Rightmost thumb now: Lower, Raise, Backspace for quick access.
        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T      &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G      &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B      &kp N &kp M  &kp COMMA &kp DOT &kp LBKT &kp ESC
            &kp LGUI &mo 1 &kp SPACE      &mt RALT RET &mo 2 &kp BSPC
        >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | SHFT | BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | BTCLR|     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |
            bindings = <
   &kp TAB    &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &kp LSHFT  &trans       &trans       &trans       &trans       &trans         &trans   &trans   &trans &trans    &trans &trans
                                    &kp LGUI     &trans       &kp SPACE      &kp RET  &trans   &kp RALT
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | SHFT |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | CTRL |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |
            //
            // Norwegian specifics:
            //   @  = AltGr+2  -> RA(N2)
            //   [  = AltGr+8  -> RA(N8)
            //   ]  = AltGr+9  -> RA(N9)
            //   {  = AltGr+7  -> RA(N7)
            //   }  = AltGr+0  -> RA(N0)
            bindings = <
   &kp  TAB  &kp EXCL &kp RA(N2) &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp ASTRK &kp LPAR &kp RPAR &kp BSPC
   &kp LCTRL &trans   &trans     &trans   &trans    &trans      &kp MINUS &kp EQUAL &kp RA(N8) &kp RA(N9) &kp BSLH &kp GRAVE
   &kp LSHFT &trans   &trans     &trans   &trans    &trans      &kp UNDER &kp PLUS  &kp RA(N7) &kp RA(N0) &kp PIPE &kp TILDE
                             &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
            >;
        };

    // (Removed separate nav + function layers to keep layout minimal.)
    };
};
